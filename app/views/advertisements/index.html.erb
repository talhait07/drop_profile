<h1>Listing advertisements</h1>
<%= link_to 'New Advertisement', new_advertisement_path %> |
<%= link_to 'Country List', countries_path %> |
<%= link_to 'Category List', categories_path %>
<table cellpadding="5px">
  <thead>
    <tr>
      <th width="120px">Title</th>
      <th width="60px">Image</th>
      <th width="240px">Url</th>
      <th width="100px">Third party</th>
      <th width="120">Countries</th>
      <th width="120px">Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= advertisement.title %></td>
        <td><%= image_tag advertisement.image.url, width: 50 %></td>
        <td><%= link_to advertisement.url, advertisement.url %></td>
        <td><%= advertisement.third_party_name %></td>
        <td><%= advertisement.all_country ? 'All' : advertisement.countries.map{|country| Carmen::Country.coded(country.code).name}.join(', ') %></td>
        <td><%= advertisement.all_category ? 'All' : advertisement.categories.map{|category| category.title}.join(', ') %></td>
        <td><%= link_to 'Show', advertisement %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
        <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
