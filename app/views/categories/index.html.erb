<h1>Listing categories</h1>

<table cellpadding="5px">
  <thead>
    <tr>
      <th width="200px">Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr style="background-color: <%= cycle('#c9e2b3', '#ce8483') %>">
        <td><%= category.title %></td>
        <td><%= link_to 'Show', category, style: 'color: #000000' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), style: 'color: #000000' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, style: 'color: #000000' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

