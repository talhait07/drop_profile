<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 n-area-bg">
  <legend class="login-now lato-font">Change password</legend>
  <%= devise_error_messages %>
  <%= flash_message %>
  <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }  do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="control-group n-field lato-font">
      <div class="controls">
        <div class="input-prepend">
          <%= f.password_field :password, placeholder: 'New Password', required: true, autofocus: true, autocomplete: 'off' %>
        </div>
      </div>
    </div>
    <div class="control-group n-field lato-font">
      <div class="controls">
        <div class="input-prepend">
          <%= f.password_field :password_confirmation, placeholder: 'Confirm new password', required: true, autocomplete: 'off' %>
        </div>
      </div>
    </div>
    <div class="form-actions n-field lato-font">
      <%= f.submit 'Update Password' %>
    </div>
  <% end %>
</div>
<span class="clearfix"></span>

<div class="n-no-acc lato-font">
  Already have an account ?
  <%= link_to 'LOG IN', new_user_session_path %>
</div>
