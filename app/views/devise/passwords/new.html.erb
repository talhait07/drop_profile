<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3   n-area-bg">
<legend class="login-now lato-font">Forgot password?</legend>
  <%= devise_error_messages %>
  <%= flash_message %>
  <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }  do |f| %>
    <div class="control-group n-field lato-font">
      <div class="controls">
        <div class="input-prepend">
          <%= f.email_field :email, placeholder: 'Email Address', required: true, autofocus: true %>
        </div>
      </div>
    </div>
    <div class="form-actions n-field lato-font">
      <%= f.submit 'Send Email' %>
    </div>
<% end %>
</div>
<span class="clearfix"></span>

<div class="n-no-acc lato-font">
Already have an account ?
<%= link_to 'LOG IN', new_user_session_path %>
</div>
