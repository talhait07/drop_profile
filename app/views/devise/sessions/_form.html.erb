<%= devise_error_messages %>
<%= flash_message %>
<%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>

  <div class="control-group n-field lato-font">
    <div class="controls">
      <div class="input-prepend">
        <%= f.email_field :email, placeholder: 'Email Address', required: true %>
      </div>
    </div>
  </div>

  <div class="control-group n-field lato-font">
    <div class="controls">
      <div class="input-prepend">
        <%= f.password_field :password, placeholder: 'Password', required: true, autocomplete: false %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group n-field lato-font n-Remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me do %>
        <span></span>Remember Me
      <% end %>
    </div>
  <% end -%>

  <div class="form-actions n-field lato-font">
    <%= f.submit 'Log In' %>
  </div>
<% end %>
<span class="clearfix"></span>

<div class="n-forget lato-font">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'n-forget-pass' %><br />
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'pull-right fg-pss' %><br />
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'pull-right fg-pss' %><br />
  <% end -%>
</div>

<span class="clearfix"></span>
