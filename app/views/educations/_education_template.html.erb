<%# locals: { education: Education object } %>
<div class="col-lg-12 a-bdr">
  <div class="col-lg-12  bar-bg">
    <div class="col-lg-8 tp-title">
      <h3><%= education.institute %></h3>
      <span><%= "( #{date_format education.start_date} to #{education.current? ? 'current' : date_format(education.end_date) } )" %></span>
    </div>
    <div class="col-lg-4 text-right edit-btn">
      <%= link_to edit_education_path(education), remote: true do %>
          <i class="fa fa-pencil-square"></i>
      <% end %>
      <%= link_to education_path(education), method: :delete, remote: true do %>
          <i class="fa fa-times"></i>
      <% end %>
    </div>
    <div class="col-lg-11 tp-sub-title">
      <%= education.title %>
    </div>
  </div>
  <div class="col-lg-12 pd-area">
    <h4 class="sub-title"><%= education.major %></h4>
    <p><%= education.description %></p>
  </div>
</div>
