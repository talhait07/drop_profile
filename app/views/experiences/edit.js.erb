$('#experience-form-container').html('<%=j render partial: 'experiences/form', locals: {experience: @experience} %>');
$('#add-new-experience').hide();

$("html, body").animate({ scrollTop: $('#experience-form-container').offset().top }, 1000);

$(".date-picker").datepicker({
    dateFormat: "dd-mm-yy",
    maxDate: 0,
    yearRange: '1970:'+(new Date).getFullYear(),
    changeMonth: true,
    changeYear: true,
    showOtherMonths: true,
    selectOtherMonths: true
});
$("[rel='tooltip']").tooltip();
