<%# locals: hobbies_interest %>
<%= form_for hobbies_interest, remote: true, authenticity_token: true do |f| %>
  <div class="field-areas" style="min-height: 400px;">
    <div class="form">
      <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
        <div class="form-group">
          <%= f.text_field :title, class: 'form-control pull-left fd-tht-size', placeholder: 'Hobbies/Interest Title', title: 'Hobbies/Interest Title', rel: 'tooltip', required: true %>
          <% if hobbies_interest.new_record? %>
            <span class="help-block pull-left txt-left">Enter multiple with comma (,) separated (Ex: Shopping, Watching TV, Cricket)</span>
          <% end %>
        </div>
      </div>
      <span class="clearfix"></span>

      <div class="btn-group pull-right center-xs mar-t20">
        <%= button_tag type: 'submit', class: 'btn btn-large default-button' do %>
            <i class="fa fa-floppy-o"></i> Save
        <% end %>
        <%= button_tag type: 'reset', class: 'btn btn-large default-button reset-form' do %>
            <i class="fa fa-refresh"></i> Reset
        <% end %>
      </div>
      <span class="clearfix"></span>
    </div>
  </div>
<% end %>
