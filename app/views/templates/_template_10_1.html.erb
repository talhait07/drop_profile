<%# locals: {template: Template object, color: string} %>
<% profile = @user.profile %>
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html><!--<![endif]-->
<head>
  <%= render partial: 'templates/shared_head', locals: {template: template, color: color} %>
  <!--google exo2.0 font -->
  <link href='http://fonts.googleapis.com/css?family=Exo+2:400,700,600,300' rel='stylesheet' type='text/css'>
</head>
<body>
<%= render partial: 'templates/header', locals: {template: template, profile: profile, color: color} %>
<!--start body-->
<!--start top section-->
<div class="container">

  <!--user_info end-->
  <div class="left_sidebar col-lg-8 col-md-8 col-sm-7 col-xs-12">

    <!--image area-->
    <div class="right_img visible-xs">
      <div class=" fix empty_height">
        <div class="user_image">
          <%= image_tag @user.profile_photo_link, alt: @user.full_name  %>
        </div>
        <!--end image area-->
      </div>
    </div>
    <div class="col-lg-12">
        <!--user_info-->
        <div class="user_info empty_height">
          <h1><%= @user.full_name %></h1>
          <h2><%= profile.title %></h2>
          <div class="objective">
            <p><%= @user.overview.try(:objective) %></p>
          </div>
        </div>
    </div>
    <% if @user.educations.present? %>
        <!--education area-->
        <div class="education_area">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="title edu">
              <h1 class="one"><span><i class="fa fa-graduation-cap "></i>EDUATION</span></h1>
            </div>

            <% @user.educations.each do |education| %>
                <div class="sub__text">
                  <h2><%= education.title %></h2>
                  <h3><%= education.major %></h3>
                  <h4><%= education.institute %></h4>
                  <h5><i class="fa fa-map-marker"></i>  <%= education.location %></h5>
                  <span class="pull-left"><i class="fa fa-trophy"></i> <%= "Score #{education.result}" %></span>
                  <span class="pull-right year"> <%= date_format education.start_date, '%b %Y' %> -
                    <%= education.current? ? 'Current' : date_format(education.end_date, '%b %Y') %></span>
                  <div class="clr"></div>
                  <p><%= education.description %></p>
                </div>
            <% end %>


          </div>
        </div>
        <!--end education area-->
    <% end %>

    <% if @user.experiences.present? %>
    <!-- Experience area-->
    <div class="experience">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="title">
          <h1 class="one"><span><i class="fa fa-suitcase"></i>Experience</span></h1>
        </div>
        <% @user.experiences.sort { |a, b| b.start_date <=> a.start_date }.each do |experience| %>
        <div class="sub__text">
          <h2><%= experience.company %></h2>
          <h3><%= experience.designation %></h3>
          <span class="pull-left"><i class="fa fa-map-marker"></i> <%= experience.location %></span>
          <span class="pull-right year"><%= date_format experience.start_date, '%b %Y' %> - <%= experience.current? ? 'Current' : date_format(experience.end_date, '%b %Y') %></span>
          <div class="clr"></div>
          <p><%= experience.description %></p>
        </div>
        <% end %>
      </div>
    </div>
        <!-- Experience area-->
    <% end %>



    <% if @user.hobbies_interests.present? %>
    <!-- Hobbies & Interest area-->
    <div class="hobbies_area">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="hobbi">
          <div class="title">
            <h1 class="one"><span><i class="fa fa-heartbeat"></i>Hobbies & Interest</span></h1>
          </div>
          <div class="hobbies">
            <div class="badges">
              <% @user.hobbies_interests.each do |hobbies_interest| %>
                        <span class="badge">
                            <%= hobbies_interest.title %>
                        </span>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Hobbies & Interest area-->
    <% end %>
  </div>

  <div class="right_sidebar col-lg-4 col-md-4 col-sm-5 col-xs-12">
    <!--image area-->
    <div class="right_img hidden-xs">
      <div class=" fix empty_height">
        <div class="user_image">
          <%= image_tag @user.profile_photo_link, alt: @user.full_name  %>
        </div>
        <!--end image area-->
      </div>
    </div>
    <!--info area-->
    <div class="info_area">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <% if @user.email.present? %>
            <div class="single_contact">
              <p><i class="fa fa-envelope-square"></i><%= @user.email %></p>
            </div>

        <% end %>
        <% if profile.phone.present? %>
            <div class="single_contact loc">
              <p><i class="fa fa-phone"></i><%= profile.phone %></p>
            </div>
        <% end %>
        <% if profile.location.present? %>
        <div class="single_contact loc">
          <p><i class="fa fa-map-marker"></i><%= profile.location %></p>
        </div>
        <% end %>
      </div>
    </div>
    <!--end info area-->


    <% if @user.skills.present? %>
    <!--skills area-->
    <div class="skills_area">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="title">
          <h1 class="one"><span><i class="fa fa-wrench"></i>SKILL</span></h1>
        </div>
        <% @user.skills.each do |skill| %>
        <div class="skills">
          <h2><%= skill.name %></h2>
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="<%= (skill.level || 0) * 20 %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= "#{(skill.level || 0) * 20}%" %>">
              <%= "#{(skill.level || 0) * 20}%" %>
            </div>
          </div>
        </div>
        <% end %>
    </div>
    <!--end skills area-->
    <% end %>

    <% if @user.languages.present? %>
    <!--Languages area-->
    <div class="languages_area">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="title">
          <h1 class="one"><span><i class="fa fa-language"></i>LANGUAGES</span></h1>
        </div>
        <% @user.languages.each do |language| %>
        <div class="no-padding col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="single_language">
            <h2><%= language.name %></h2>
            <ul>
              <li class="ti_lagn">Speaking</li>
             <li>
               <% (1..language.speaking_level).each do %>
                   <i class="fa fa-star"></i>
               <% end %>
               <% (1..(5-language.speaking_level)).each do %>
                   <i class="fa fa-star-o"></i>
               <% end %>

             </li>
            </ul>
            <ul>
              <li class="ti_lagn">Writing&nbsp;&nbsp;&nbsp;</li>
              <li>
                <% (1..language.writing_level).each do %>
                    <i class="fa fa-star"></i>
                <% end %>
                <% (1..(5-language.writing_level)).each do %>
                    <i class="fa fa-star-o"></i>
                <% end %>
              </li>


            </ul>
            <ul>
              <li class="ti_lagn">Listening&nbsp;&nbsp;&nbsp;</li>
              <li> <% (1..language.listening_level).each do %>
                    <i class="fa fa-star"></i>
                <% end %>
                <% (1..(5-language.listening_level)).each do %>
                    <i class="fa fa-star-o"></i>
                <% end %></li>
            </ul>
          </div>
        </div>
    <% end %>
      </div>
    </div>
    <!--end Languages area-->
    <% end %>

    <% if @user.references.present? %>
    <!--references area-->
    <div class="references_area">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="title">
          <h1 class="one"><span><i class="fa fa-user-plus"></i>REFERENCES</span></h1>
        </div>

        <% @user.references.each do |reference| %>
        <div class="single_refer">
          <h2><%= reference.name %></h2>
          <h3><%= reference.company %></h3>
          <h4><%= reference.designation %></h4>
          <p><i class="fa fa-globe"></i>  <%= reference.location %></p>
          <p><i class="fa fa-envelope-square"></i>  <%= reference.email %></p>
          <p><i class="fa fa-phone"></i> <%= reference.phone %></p>
        </div>
        <% end %>

      </div>
    </div>
    <!--end references area-->
    <% end %>
  </div>
</div>
</div>
<!-- end body info section-->

<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
<script src="js/bootstrap.min.js"></script>

</body>
</html>